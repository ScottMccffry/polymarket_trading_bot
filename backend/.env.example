# Backend Environment Variables
# Copy this to .env and fill in your values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (SQLite for local, can use PostgreSQL in production)
DATABASE_URL=sqlite+aiosqlite:///./data/polymarket.db

# Polymarket API
POLYMARKET_CLOB_URL=https://clob.polymarket.com
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com

# Scheduler
SCHEDULER_ENABLED=true
MARKET_HARVEST_INTERVAL_HOURS=12
MARKET_HARVEST_MAX_MARKETS=5000

# OpenAI (optional - for LLM features)
OPENAI_API_KEY=

# Qdrant Vector DB (optional - for semantic search)
QDRANT_URL=
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=polymarket_markets

# Telegram (optional - for signal monitoring)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_PHONE=
TELEGRAM_GROUPS=
